<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. --><style name="Theme.AutoPodkat" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/siren</item>
        <item name="colorPrimaryVariant">@color/darker_purple</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:panelFullBackground">@color/darker_purple</item>
        <item name="android:itemBackground">@color/darker_purple</item>
    <item name="itemTextColor">@color/white</item>
    </style>
    <style name="Theme.AutoPodkat.NoActionBar">
        <item name="itemFillColor">@color/darker_purple</item>
        <item name="itemBackground">@color/darker_purple</item>
        <item name="windowActionBar">false</item>
        <item name="android:panelFullBackground">@color/darker_purple</item>
        <item name="windowNoTitle">true</item>
        <item name="itemTextColor">@color/white</item>
    </style>
    <style name="Theme.AutoPodkat.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="Theme.AutoPodkat.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="itemFillColor">@color/darker_purple</item>
        <item name="itemBackground">@color/darker_purple</item>
        <item name="itemTextColor">@color/darker_purple</item>
        <item name="android:textColorPrimary">@color/darker_purple</item>
        <item name="android:textColorSecondary">@color/light_purple</item>
        <item name="android:textColor">@color/white</item>
        <item name="background">@color/darker_purple</item>
        <item name="backgroundColor">@color/darker_purple</item>
        <item name="android:windowBackground">@color/darker_purple</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textColorPrimary">@color/darker_purple</item>
        <item name="android:textColorSecondary">@color/light_purple</item>
        <item name="android:textColor">@color/white</item>
        <item name="background">@color/darker_purple</item>
        <item name="backgroundColor">@color/darker_purple</item>
        <item name="android:windowBackground">@color/darker_purple</item>
    </style>

</resources>