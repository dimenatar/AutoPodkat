<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.HomeFragment">
    <TextView
            android:text="@string/business_car_en"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/business_car_text"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintVertical_bias="0.022" app:layout_constraintHorizontal_bias="0.496"/>
    <TextView

            android:text="@string/economy_car_en"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/economy_car_text"

            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintVertical_bias="0.738" app:layout_constraintHorizontal_bias="0.498"/>
    <TextView
            android:text="@string/standard_car_en"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/standard_car_text"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintVertical_bias="0.406" app:layout_constraintHorizontal_bias="0.498"/>
</androidx.constraintlayout.widget.ConstraintLayout>
