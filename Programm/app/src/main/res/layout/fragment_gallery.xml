<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.gallery.GalleryFragment">
    <LinearLayout
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="wrap_content" tools:layout_editor_absoluteX="0dp"
            app:layout_constraintVertical_bias="0.023">
        <TextView
                android:text="Car"
                android:layout_marginStart="5dp"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_weight="0.15"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:id="@+id/recycler_carMark"/>
        <TextView
                android:text="Start ride date"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:layout_width="0dp"
                android:layout_weight="0.15"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:id="@+id/recycler_startDate"/>
        <TextView
                android:text="End ride date"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:layout_width="0dp"
                android:layout_weight="0.15"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:id="@+id/recycler_endDate"/>
        <TextView
                android:text="Total time"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:layout_width="0dp"
                android:layout_weight="0.15"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/recycler_amountHours"/>
        <TextView
                android:text="Total price"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="0dp"
                android:layout_weight="0.15"
                android:layout_height="wrap_content"
                android:id="@+id/recycler_totalPrice"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
            android:paddingTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/order_recycleView"/>
</androidx.constraintlayout.widget.ConstraintLayout>