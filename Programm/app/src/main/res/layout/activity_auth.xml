<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@color/trans_black"
        android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/auth_AppBar">
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.appcompat.widget.Toolbar
            android:id="@+id/auth_ToolBar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:titleTextColor="@color/white"
            android:background="?attr/colorPrimary"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="50dp"
            android:background="@color/darker_purple"
            android:layout_height="match_parent">
        <EditText
                android:paddingTop="70dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="20"
                android:inputType="textPersonName"
                android:backgroundTint="@color/light_purple"
                android:textColor="@color/white"
                android:textColorHint="@color/gray"
                android:text=""
                android:ems="10"
                android:hint="User name"
                android:id="@+id/AuthUserNameEdit"/>
        <EditText
                android:paddingTop="70dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/light_purple"
                android:maxLength="20"
                android:textColor="@color/white"
                android:textColorHint="@color/gray"
                android:hint="Password"
                android:inputType="textPersonName"
                android:text=""
                android:ems="10"
                android:id="@+id/AuthPassEdit"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_marginTop="60dp"
                android:text="@string/confirm"
                android:textColor="@color/white"
                android:id="@+id/Confirm_auth_button"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="80dp"
                android:text="@string/create_acc"
                android:textSize="15sp"
                  android:id="@+id/NotHaveAcc"/>
    </LinearLayout>

</RelativeLayout>